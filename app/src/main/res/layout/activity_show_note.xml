<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ShowNoteActivity">

    <ImageView
        android:id="@+id/show_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/show_guideLine"/>

    <ImageView
        android:id="@+id/show_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_arrow_back_black_32dp"/>

    <TextView
        android:id="@+id/show_title_tv"
        android:text="text"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/show_guideLine"/>

    <TextView
        android:id="@+id/show_tv"
        android:text="평점 : "
        android:textSize="24sp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/show_title_tv"
        app:layout_constraintBottom_toTopOf="@id/show_guideLine"/>

    <TextView
        android:id="@+id/show_rating_tv"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/show_tv"
        app:layout_constraintBottom_toTopOf="@id/show_guideLine"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/show_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <TextView
        android:id="@+id/show_content_tv"
        android:background="@drawable/edge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/show_guideLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/show_guideLine2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/show_guideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />

    <TextView
        android:id="@+id/show_name_tv"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_guideLine2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_room_service_black_24dp"/>
    <TextView
        android:id="@+id/show_location_tv"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_place_black_24dp"/>

    <TextView
        android:id="@+id/show_phone_tv"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_location_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_phone_black_24dp"/>

    <TextView
        android:id="@+id/show_price_tv"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_phone_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/ic_search_black_24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>